<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskPlanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="Theme_purple" parent="Theme.TaskPlanner">

        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->

        <item name="colorOnSurface">@color/black_600</item>
        <item name="colorPrimarySurface">@color/white</item>

        <item name="colorSurface">@color/purple_100</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_100</item>
    </style>

</resources>