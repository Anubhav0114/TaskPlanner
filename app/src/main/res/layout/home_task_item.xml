<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="110dp"
    android:background="@drawable/rect_task_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp">


        
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redesign home
             Screen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Social App"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_task_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"/>

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_project_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:src="@drawable/ellipse_1"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Till 26/4/2023"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_circle"
            app:layout_constraintTop_toBottomOf="@id/tv_project_name"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/grey"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>