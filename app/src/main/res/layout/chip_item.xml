<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <com.example.taskplanner.customview.CustomChip
        android:id="@+id/customChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="12dp"
        app:isIcon="true"
        app:iconTint="@color/white"
        app:textSize="@dimen/medium_text"
        app:isChecked="true"
        app:text="Android"
        app:infoBackgroundRadius="12dp"
        app:cornerRadius="@dimen/rounded_low"
        app:activeInfoTextColor="@color/white"
        app:gap="16dp"
        app:infoTextSize="@dimen/small_text"
        app:activeInfoBackgroundColor="#4FFFFFFF"
        app:activeBackgroundColor="?attr/colorPrimary"

        />

</RelativeLayout>